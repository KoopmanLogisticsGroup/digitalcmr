---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: composer-playground-kpm-pon
spec:
  replicas: 1
  template:
    metadata:
      labels:
        name: composer-playground-kpm-pon
    spec:
      containers:
      - name: composer-playground-kpm-pon
        image: hyperledger/composer-playground:0.13.2
        imagePullPolicy: Always
        env:
        - name: COMPOSER_CONFIG
          value: >
            {
              "cards": [{
                "metadata": {
                  "version": 1,
                  "userName": "PeerAdmin",
                  "enrollmentSecret": "NOTUSED",
                  "roles": [
                    "PeerAdmin",
                    "ChannelAdmin"
                  ]
                },
                "connectionProfile": {
                  "name": "hlfv1",
                  "description": "Hyperledger Fabric v1.0",
                  "type": "hlfv1",
                  "orderers": [
                      {
                          "url": "grpc://orderer-kpm-pon:7050"
                      }
                  ],
                  "ca": {
                      "url": "http://ca-kpm-pon:7054",
                      "name": "ca-kpm-pon"
                  },
                  "peers": [
                      {
                          "requestURL": "grpc://peer0-kpm-pon:5010",
                          "eventURL": "grpc://peer0-kpm-pon:5011"
                      }
                  ],
                  "keyValStore": "/home/composer/.hfc-key-store",
                  "channel": "kpmponchannel",
                  "mspID": "kpm-ponMSP",
                  "timeout": 300
                },
                "credentials": null
              }]
            }
        volumeMounts:
        - name: kpm-pon-composer-credentials
          mountPath: /home
      volumes:
      - name: kpm-pon-composer-credentials
        hostPath:
          path: /composer
  nodeSelector:
    environment: kpm-pon