---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: composer-playground-all
spec:
  replicas: 1
  template:
    metadata:
      labels:
        name: composer-playground-all
    spec:
      containers:
      - name: composer-playground-all
        image: hyperledger/composer-playground:0.13.2
        imagePullPolicy: Always
        env:
        - name: COMPOSER_CONFIG
          value: >
            {
              "cards": [{
                "metadata": {
                  "version": 1,
                  "userName": "adminall",
                  "enrollmentSecret": "NOTUSED",
                  "roles": [
                    "PeerAdmin",
                    "ChannelAdmin"
                  ]
                },
                "connectionProfile": {
                  "name": "hlfv1",
                  "description": "Hyperledger Fabric v1.0",
                  "type": "hlfv1",
                  "orderers": [
                      {
                          "url": "grpc://%ORDERER_ADDRESS%"
                      }
                  ],
                  "ca": {
                      "url": "http://ca-all:7054",
                      "name": "ca-all"
                  },
                  "peers": [
                      {
                          "requestURL": "grpc://peer0-all:5010",
                          "eventURL": "grpc://peer0-all:5011"
                      }
                  ],
                  "keyValStore": "/home/composer/.composer-credentials",
                  "channel": "kpmallstagchannel",
                  "mspID": "allMSP",
                  "timeout": 300
                },
                "credentials": null
              }]
            }
        volumeMounts:
        - name: all-composer-credentials
          mountPath: /home
      volumes:
      - name: all-composer-credentials
        hostPath:
          path: /composer